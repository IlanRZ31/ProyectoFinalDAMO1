<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".VistaMascotaFragment">

    <!-- TODO: aÃ±adir  font style, y pues, los otros elementos...-->
    <TextView
        android:id="@+id/tvNombreMascotaDetallada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMenuVacunas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PET_NAME" />

    <Button
        android:id="@+id/btnMenuVacunas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vacunas"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMenuTratamiento"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreMascotaDetallada" />

    <Button
        android:id="@+id/btnMenuTratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tratamientos"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuVacunas" />

</androidx.constraintlayout.widget.ConstraintLayout>